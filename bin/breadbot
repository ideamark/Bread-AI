#!/usr/bin/env python3
import os
import re
import sys

from breadbot import core
from breadbot import func
from breadbot import serv


if os.geteuid():
    args = [sys.executable] + sys.argv
    os.execlp('sudo', 'sudo', *args)

user = 'localuser'
db = core.common.get_db()


def show_help():
    print(
        '\n'
        ' start:      start server\n'
        ' Ctr+C:      stop server\n'
        ' help:       display this help\n'
        ' q:          exit this console\n'
        )
    print(core.common.show_help(user))


def import_data():
    func.import_data.import_data(db)


def active(cmd):
    if cmd == 'help':
        show_help()
    elif cmd == 'start':
        serv.start()
    else:
        print(core.response(db, user, cmd))


if __name__ == '__main__':

    if len(sys.argv) > 1:
        cmd = ' '.join(sys.argv[1:])
        active(cmd)
        sys.exit(0)

    import_data()

    while True:
        cmd = input('>> ')
        if cmd == 'q' or cmd == 'exit':
            break
        elif cmd == '':
            continue
        else:
            active(cmd)
